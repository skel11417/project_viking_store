<h2 id="heading-users" class="text-center">Products</h2>
<br class="text-center">
  <%= link_to("Create New Product", new_product_path, :class => "btn btn-primary") %>
</br>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Category</th>
    <th>SHOW</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td><%= link_to product.category.name, category_path(product.category.id) %></td>
        <td><%= link_to("SHOW", product_path(product)) %></td>
        <td><%= link_to("EDIT", edit_product_path(product)) %></td>
        <td><%= button_to("DELETE", product_path(product), method: :delete,
                                  data: { confirm: "You sure?" }) %></td>
    </tr>
    <% end %>
  </table>
