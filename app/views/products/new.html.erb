<h2 id="heading-users" class="text-center">New Category</h2>
<%= @category.errors.full_messages[0] %>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<table>
  <tr>
    <td><b>Category ID:</b></td>
    <td><%= @category.id %></td>
  </tr>
  <tr>
    <%= form_for @category do |f| %>
    <td><b><%= f.label :name, "Name:" %></b></td>
    <td> <%= f.text_field :name %> </td>
  </tr>
</table>
    <%= f.submit "Create Category", :class => "btn btn-primary" %>
    <% end %>
