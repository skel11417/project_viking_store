<h2 id="heading-users" class="text-center">Viking Store Users</h2>
<br class="text-center">
  <%= link_to("Create a New User", new_user_path, :class => "btn btn-primary") %>
</br>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Joined</th>
    <th>City</th>
    <th>State</th>
    <th>Orders</th>
    <th>Last Order Date</th>
    <th>SHOW</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
        <td><%= user.id %></td>
        <td><%= user.full_name %></td>
        <td><%= user.join_date %></td>

        <td><%= user.city %></td>
        <!-- # state -->
        <td><%= user.state %></td>
        <!-- # orders -->
        <td><%= link_to user.num_orders, order_history_path(user) %></td>
        <td><%= user.last_order %></td>
        <td><%= link_to("SHOW", user_path(user)) %></td>
        <td><%= link_to("EDIT", edit_user_path(user)) %></td>
        <td><%= link_to("DELETE", user_path(user), method: :delete,
                                  data: {confirm: "You sure?"} ) %></td>
    </tr>
    <% end %>
  </table>
