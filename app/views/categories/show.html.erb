<h2 id="heading-users" class="text-center">Category <%= @category.id %>: <%= @category.name %></h2>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<p><%= link_to("Edit Category", edit_category_path) %></p>
<p><%= link_to("Delete Category", "#") %></p>

<table>
  <tr>
    <td><b>Category ID:</b></td>
    <td><%= @category.id %></td>
  </tr>
  <tr>
    <td><b>Name:</b></td>
    <td><%= @category.name %></td>
  </tr>
</table>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %> </td>
      <td><%= link_to(product.name, product_path(product)) %> </td>
    </tr>
  <% end %>
</table>
